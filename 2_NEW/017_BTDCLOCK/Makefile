

export INCLUDE=../../INCLUDE_WIN/
export ASM=../../FASM.EXE

help:
	@echo "Apply one of following:"
	@echo "  make all ...... compile"
	@echo "  make clean .... delete"
	@echo "  make ldd ...... check"

all: 1_BTDCLOCK.EXE  2_BTDCOUNTDOWN.EXE 3_BTDTIMER.EXE

1_BTDCLOCK.EXE: A_BTDCLOCK.ASM B_BTDCLOCK.RES
	${ASM} A_BTDCLOCK.ASM 1_BTDCLOCK.EXE
	dir 1_BTDCLOCK.EXE

2_BTDCOUNTDOWN.EXE: C_BTDCOUNTDOWN.ASM D_BTDCOUNTDOWN.RES
	${ASM} C_BTDCOUNTDOWN.ASM 2_BTDCOUNTDOWN.EXE
	dir 2_BTDCOUNTDOWN.EXE

3_BTDTIMER.EXE: E_BTDTIMER.ASM F_BTDTIMER.RES
	${ASM} E_BTDTIMER.ASM 3_BTDTIMER.EXE
	dir 3_BTDTIMER.EXE

clean:
	CMD.EXE /C DEL 1_BTDCLOCK.EXE
	CMD.EXE /C DEL 2_BTDCOUNTDOWN.EXE
	CMD.EXE /C DEL 3_BTDTIMER.EXE

ldd:
	file  1_BTDCLOCK.EXE
	ntldd 1_BTDCLOCK.EXE
	file  2_BTDCOUNTDOWN.EXE
	ntldd 2_BTDCOUNTDOWN.EXE
	file  3_BTDTIMER.EXE
	ntldd 3_BTDTIMER.EXE

# --- end ---

